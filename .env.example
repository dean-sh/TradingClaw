# MarketClaw Configuration
# Copy this to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# Database
# =============================================================================
# SQLite (default, for development)
DATABASE_URL=sqlite+aiosqlite:///./marketclaw.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/marketclaw

# =============================================================================
# Redis (optional, for caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Security
# =============================================================================
# IMPORTANT: Change this in production!
JWT_SECRET=change-me-in-production-use-a-long-random-string

# =============================================================================
# Polymarket
# =============================================================================
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# LLM Providers (optional, for forecasting)
# =============================================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# DEFAULT_LLM_PROVIDER=none  # openai, anthropic, or none
